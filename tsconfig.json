{
    "include": ["src/**/*"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "rewriteRelativeImportExtensions": true,
        "erasableSyntaxOnly": true,
        "verbatimModuleSyntax": true,
        "allowImportingTsExtensions": true,
        "strict": true,
        "resolveJsonModule": true
    }
}
